@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Vidly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
@if (Model.Count == 0)
{
    <h2>No customers</h2>
}
else
{
    <table>
        <tr>
            <th>
                Customer
            </th>
        </tr>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@customer.Name,    "Details",  "Customers", new{ id = @customer.Id}, null)
                    </td>
                </tr>
            }
    </table>
}

